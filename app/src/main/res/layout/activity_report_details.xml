<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp"
        tools:context=".ReportDetailsActivity">

        <LinearLayout
            android:id="@+id/lnrPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/pressure"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblPressure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrSugarRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/random_sugar"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblRandomSugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrCholestrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/cholestrol"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblCholestrol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrStress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/stress"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblStress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrECG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/lecg"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblECG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/lbmi"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblBMI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrHemogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/lhemogram"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblHemogram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrVAH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"

            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/vah"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblVAH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="2.0 (1/min*1/m(2))"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrCI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"

            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/ci"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblCI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="2.0 (1/min*1/m(2))"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrCVD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp"

            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/cvd"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/lblCVD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="1.5256410256410255"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="@string/get_pdf" />

        <Button
            android:id="@+id/btnAddPres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="@string/add_prescription"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Emergency call" />

    </LinearLayout>
</ScrollView>