<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mywings.patients">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ContactActivity"></activity>
        <activity android:name=".UpdateDoctorActivity" />
        <activity
            android:name=".UpdateProfileUserActivity"
            android:label="@string/profile" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientRegistrationActivity"
            android:label="Patient Registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DoctorRegistrationActivity"
            android:label="Doctor Registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FortgotActivity"
            android:label="@string/forgot"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReportDetailsActivity"
            android:label="@string/report"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/patients"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PatientInfoActivity"
            android:label="@string/info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".prescription.AddPrescriptionActivity"
            android:label="@string/pres"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionariesActivity"
            android:label="@string/questionaries"
            android:screenOrientation="portrait" />
    </application>

</manifest>